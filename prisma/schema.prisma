generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// BetterAuth 標準テーブル
// ===========================================

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions  Session[]
  accounts  Account[]
  plans     Plan[]
  bookmarks Bookmark[]
  likes     Like[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verification")
}

// ===========================================
// アプリ固有テーブル
// ===========================================

model Plan {
  id           String   @id @default(cuid())
  destination  String
  days         Int
  thumbnailUrl String?
  authorId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  author    User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  dayList   Day[]
  bookmarks Bookmark[]
  likes     Like[]

  @@map("plan")
}

model Day {
  id        String @id @default(cuid())
  dayNumber Int
  planId    String

  plan  Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  spots Spot[]

  @@unique([planId, dayNumber])
  @@map("day")
}

model Spot {
  id         String @id @default(cuid())
  name       String
  memo       String @default("")
  orderIndex Int
  dayId      String

  day Day @relation(fields: [dayId], references: [id], onDelete: Cascade)

  @@map("spot")
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  planId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([userId, planId])
  @@map("bookmark")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  planId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([userId, planId])
  @@map("like")
}
